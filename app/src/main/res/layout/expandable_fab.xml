<?xml version="1.0" encoding="utf-8"?>
<com.nambimobile.widgets.efab.ExpandableFabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandable_fab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nambimobile.widgets.efab.ExpandableFab
        android:id="@+id/expandable_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="@dimen/fab_margin"
        app:efab_color="@color/imdbYellow"
        app:efab_icon="@drawable/ic_add"
        app:efab_size="auto"
        app:efab_iconAnimationRotationDeg="180"
        app:efab_closingAnticipateTension="0"
        app:label_text="Add titles"/>

    <com.nambimobile.widgets.efab.FabOption
        android:id="@+id/faboption1_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_color="@color/imdbYellowLighter"
        app:fab_icon="@drawable/ic_search"
        app:label_text="Import from file"
        app:label_backgroundColor="@color/imdbGray" />
    <com.nambimobile.widgets.efab.FabOption
        android:id="@+id/faboption2_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_color="@color/imdbYellowLightest"
        app:fab_icon="@drawable/ic_globe"
        app:label_text="Point to list"
        app:label_backgroundColor="@color/imdbGray"/>
</com.nambimobile.widgets.efab.ExpandableFabLayout>