<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_grid_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black70alpha"
    android:orientation="vertical"
    android:padding="2dp">

    <ImageView
        android:id="@+id/widget_item_poster"
        android:layout_width="65dp"
        android:layout_height="88.5dp"
        android:src="@drawable/ic_movies_poster"
        app:srcCompat="@drawable/ic_movies_poster" />

    <LinearLayout
        android:id="@+id/widget_item_details"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:autoSizeTextType="uniform"
            android:text="8.3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/icon_star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_rating"
            app:srcCompat="@drawable/ic_star_rating" />

    </LinearLayout>
    <!--end of details-->

</LinearLayout><!--end of item-->

